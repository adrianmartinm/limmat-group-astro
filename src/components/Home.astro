        <CTA title="Signalling & Telecomunications"></CTA>
        <CTA title="Rolling Stock"></CTA>
        <CTA title="Superstructure and power supply"></CTA>
        <CTA title="System Integration"></CTA>
        <CTA title="Big Data & Data Analytic"></CTA>
        <CTA title="Machine Learning"></CTA>
        <CTA title="Cybersecurity"></CTA>
        <CTA title="BIM"></CTA>
      </div>    
