---
// src/components/Common/FlipCard.astro

const { frontText, backText } = Astro.props;
---

<div class="w-72 h-48 perspective-1000">
    <div
        class="relative w-full h-full transition-transform duration-1000 transform-style-preserve-3d hover:rotate-y-180"
    >
        <div
            class="absolute w-full h-full bg-purple-700 text-white flex items-center justify-center border-4 border-purple-700 rounded-lg text-xl backface-hidden"
        >
            <p>{frontText}</p>
        </div>
        <div
            class="absolute w-full h-full bg-orange-400 text-white flex items-center justify-center border-4 border-orange-400 rounded-lg text-xl backface-hidden rotate-y-180"
        >
            <p>{backText}</p>
        </div>
    </div>
</div>

<style>
    /* src/styles/flip-card.css */

    .limmat-flip-card {
        width: 300px;
        height: 200px;
        perspective: 1000px;
    }

    .limmat-flip-card-inner {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 0.999s;
    }

    .limmat-flip-card:hover .limmat-flip-card-inner {
        transform: rotateY(180deg);
    }

    .limmat-flip-card-front,
    .limmat-flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
    }

    .limmat-flip-card-front {
        background-color: #6a2c70;
        color: #fff;
        display: flex;
        align-items: center;
        border: 10px solid #6a2c70;
        border-radius: 10px;
        justify-content: center;
        font-size: 24px;
        transform: rotateY(0deg);
    }

    .limmat-flip-card-back {
        background-color: #f08a5d;
        color: #fff;
        display: flex;
        align-items: center;
        border: 10px solid #f08a5d;
        border-radius: 10px;
        justify-content: center;
        font-size: 24px;
        transform: rotateY(180deg);
    }
</style>
