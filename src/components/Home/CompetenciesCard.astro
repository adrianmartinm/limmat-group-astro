---
// src/components/Card.astro
const { image, title } = Astro.props;
---

<div
  class="relative grid h-[14rem] w-full max-w-[28rem] flex-col items-center justify-center overflow-hidden rounded-xl bg-white bg-clip-border text-center text-gray-700 border-2 border-gray-400"
>
  <div
    class="absolute inset-0 m-0 h-full w-full overflow-hidden rounded-none bg-transparent bg-cover bg-clip-border bg-center text-gray-700 shadow-none"
    style={`background-image:url('${image}')`}
  >
    <div
      class="absolute inset-0 w-full h-full bg-gradient-to-t from-black/80 via-black/50"
    >
    </div>
  </div>
  <div
    class="relative flex items-center justify-center h-full p-6 px-6 md:px-12"
  >
    <h2
      class="block font-sans text-3xl font-medium leading-[1.5] tracking-normal text-white antialiased"
    >
      {title}
    </h2>
  </div>
</div>
